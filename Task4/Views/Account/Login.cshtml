@model Task4.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow p-4" style="width: 400px;">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <h4 class="text-center">Use a local account to log in.</h4>
        <hr />
        <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl ??">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input class="form-control" placeholder="Enter login" asp-for="Login" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input class="form-control" placeholder="Password" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="text-center">
                <input type="submit" value="Login" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>