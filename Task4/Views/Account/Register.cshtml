@model Task4.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            display: flex;
            height: 100vh;
            margin: 0;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            width: 100%;
        }

        .form-section {
            flex: 1;
            min-width: 300px;
            max-width: 600px;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
        }

            .form-section h1 {
                font-size: 2rem;
                color: #333;
            }

            .form-section h4 {
                font-size: 1.2rem;
                margin-bottom: 1rem;
                color: #666;
            }

        .form {
            width: 100%;
        }

        .form-group {
            margin-bottom: 1rem;
            width: 100%;
        }

            .form-group label {
                font-size: 0.9rem;
                color: #555;
                margin-bottom: 0.5rem;
                display: block;
            }

            .form-group input {
                width: 100%;
                padding: 0.75rem;
                border: 1px solid #ccc;
                border-radius: 0.5rem;
                font-size: 1rem;
            }

                .form-group input:focus {
                    border-color: #007bff;
                    outline: none;
                }

            .form-group span {
                font-size: 0.8rem;
                color: red;
            }

        .btn {
            width: 100%;
            padding: 0.75rem;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 0.5rem;
            font-size: 1rem;
            cursor: pointer;
            text-align: center;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .links {
            display: flex;
            justify-content: center;
            margin-top: 1rem;
            font-size: 0.9rem;
        }

            .links a {
                color: #007bff;
                text-decoration: none;
            }

                .links a:hover {
                    text-decoration: underline;
                }

        .background-section {
            flex: 1;
            min-width: 300px;
            background: url('https://via.placeholder.com/800x800') no-repeat center center/cover;
            display: none;
        }

        @@media (min-width: 768px) {
            .background-section

        {
            display: block;
        }

        }</style>
</head>
<body>
    <div class="container">
        <div class="form-section">
            <img src="https://via.placeholder.com/150x50?text=The+App" alt="Logo" style="margin-bottom: 2rem;">
            <h4>Create your account</h4>
            <h1>Sign Up for The App</h1>
            <form class="form" method="post" asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Login">Login</label>
                    <input class="form-control" placeholder="Enter your login" asp-for="Login">
                    <span asp-validation-for="Login"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">E-mail</label>
                    <input class="form-control" placeholder="Enter your email" asp-for="Email">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName">Full Name</label>
                    <input class="form-control" placeholder="Enter your full name" asp-for="FullName">
                    <span asp-validation-for="FullName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input class="form-control" placeholder="Enter your password" asp-for="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirm">Confirm Password</label>
                    <input class="form-control" placeholder="Confirm your password" asp-for="PasswordConfirm">
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>
                <input type="submit" value="Sign Up" class="btn">
                <div class="links">
                    <a href="/Login">Already have an account? Sign In</a>
                </div>
            </form>
        </div>
        <div class="background-section"></div>
    </div>
</body>
</html>