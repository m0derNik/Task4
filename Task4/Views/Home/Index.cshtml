@model IEnumerable<Task4.Models.User>
@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    <form method="post" asp-action="Delete" asp-controller="Home">
        <nav class="nav navbar navbar-collapse">
            <div class="nav-item">
                <button class="btn btn-sm btn-danger" asp-action="Block" asp-controller="Home">Block</button>
                <button class="btn" asp-action="Unblock" asp-controller="Home"><i class="fas fa-unlock-alt"></i></button>
            </div>
            <button type="submit" class="btn"><i class="fas fa-trash-alt"></i></button>
        </nav>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"><input type="checkbox" id="selectDeselect" value="select all / deselect " /></th>
                    <th scope="col">ID</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Registration</th>
                    <th scope="col">Last Login</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr scope="row">
                        <td><input type="checkbox" id="@user.Id" name="userIds" value="@user.Id" class="checkboxtable" /></td>
                        <td>@user.Id</td>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.RegistrationDate</td>
                        <td>@user.LastLoginTime</td>
                        @{
                            if (user.IsEnable == true)
                            {
                                <td>Unblock</td>
                            }
                            else
                            {
                                <td>Block</td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </form>

    <script>
        $('#selectDeselect').click(function () {
            if ($(this).is(':checked')) {
                $('.checkboxtable').prop('checked', true);
            } else {
                $('.checkboxtable').prop('checked', false);
            }
        });
    </script>

}
else
{
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
    </div>
}

